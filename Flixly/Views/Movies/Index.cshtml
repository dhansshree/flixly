@model List<Flixly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h2>Movies</h2>
        @if (Model.Count > 0)
        {
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th scope="col">Movie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>No Movies Found</p>
        }
    </div>
</div>
